    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }

        },
        {
            "name": "Run Live Trading Pipeline",
            "type": "debugpy",
            "request": "launch",
            "program": "src/core/logic/pipeline.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }

        },
        {
            "name": "Run Backtest Pipeline",
            "type": "debugpy",
            "request": "launch",
            "program": "src/tests/functional/backtest.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }

        }
    ]
}